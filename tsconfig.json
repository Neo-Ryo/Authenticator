{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./",
        "outDir": "./build",
        "esModuleInterop": true,
        "strict": true,
        "useUnknownInCatchVariables": false,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "test/*": ["test/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.test.ts"]
}
