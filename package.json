{
  "name": "boilerplate_nodejs",
  "version": "1.0.0",
  "description": "Simple boilerplate with prettier and eslint setup",
  "main": "index.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project ./",
    "husky:setup": "husky install && npx husky add .husky/pre-commit \"yarn prettier:fix\" && npx husky add .husky/pre-commit \"yarn lint\" && npx husky add .husky/pre-commit \"yarn test\" && npx husky add .husky/pre-push \"yarn build\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --check **/*.ts **/*.json",
    "prettier:fix": "prettier --write **/*.ts **/*.json",
    "start": "yarn checkHusky && nodemon -L index.ts",
    "swaggerGen": "npx swagger-typescript-api -p ./src/swagger/swagger.json -o ./src/swagger/api -t ./src/swagger/templates/modular --modular",
    "swaggerBundle": "npx swagger-cli bundle ./src/swagger/baseApi.json --outfile ./src/swagger/swagger.json --type json",
    "test": "set NODE_ENV=test&& jest --detectOpenHandles --silent --verbose",
    "test:watch": "set NODE_ENV=test&& jest --detectOpenHandles --silent --verbose --watch",
    "checkHusky": "node checkIfHuskyExists.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/morgan": "^1.9.2",
    "@types/node": "^16.7.8",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "node": "^14.17.1",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3"
  },
  "keywords": [],
  "author": ""
}
