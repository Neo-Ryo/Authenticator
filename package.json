{
  "name": "authenticator",
  "version": "0.0.1",
  "description": "2 factors authentication service",
  "main": "src/index.ts",
  "license": "MIT",
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "build": "tsc --project ./",
    "db:create": "npx ts-node src/database/build.ts",
    "db:drop": "npx ts-node src/database/drop.ts",
    "husky:check": "node --require ts-node/register ./checkIfHuskyExists",
    "husky:setup": "node --require ts-node/register ./prepare",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --check **/*.{ts,json}",
    "prettier:fix": "prettier --write **/*.{ts,json}",
    "start": "yarn husky:check && nodemon -L ./src/index.ts",
    "swagger:gen": "npx swagger-typescript-api -p ./src/swagger/swagger.json -o ./src/swagger/api -t ./src/swagger/templates/modular --modular",
    "swagger:bundle": "npx swagger-cli bundle ./src/swagger/baseApi.json --outfile ./src/swagger/swagger.json --type json",
    "swagger:full": "yarn swagger:bundle && yarn swagger:gen && yarn prettier:fix",
    "test": "cross-env NODE_ENV=test&& jest --detectOpenHandles --verbose",
    "test:coverage": "cross-env NODE_ENV=test&& jest --detectOpenHandles --verbose --coverage",
    "test:watch": "cross-env NODE_ENV=test&& jest --detectOpenHandles --verbose --watch"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.6",
    "@types/otplib": "^10.0.0",
    "@types/pg": "^8.6.5",
    "@types/qrcode": "^1.5.0",
    "@types/sequelize": "^4.28.14",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@neomanis/neo-utilities": "^1.0.2",
    "@types/uuid": "^9.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "node": "^16.13.0",
    "otplib": "^12.0.1",
    "pg": "^8.8.0",
    "pgtools": "^0.3.2",
    "qrcode": "^1.5.1",
    "sequelize": "^6.26.0",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^9.0.0",
    "winston": "^3.3.3"
  },
  "keywords": [],
  "author": ""
}
