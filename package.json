{
  "name": "boilerplate_nodejs",
  "version": "1.0.0",
  "description": "Simple boilerplate for backend services",
  "main": "src/index.ts",
  "license": "MIT",
  "engines": {
    "node": ">=16.13.0"
  },
  "scripts": {
    "build": "tsc --project ./",
    "husky:check": "node checkIfHuskyExists.ts",
    "husky:setup": "husky install && npx husky add .husky/pre-commit \"yarn prettier:fix\" && npx husky add .husky/pre-commit \"yarn lint\" && npx husky add .husky/pre-push \"yarn test\" && npx husky add .husky/pre-push \"yarn build\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --check **/*.{ts,json}",
    "prettier:fix": "prettier --write **/*.{ts,json}",
    "start": "yarn husky:check && nodemon -L ./src/index.ts",
    "swagger:gen": "npx swagger-typescript-api -p ./src/swagger/swagger.json -o ./src/swagger/api -t ./src/swagger/templates/modular --modular",
    "swagger:bundle": "npx swagger-cli bundle ./src/swagger/baseApi.json --outfile ./src/swagger/swagger.json --type json",
    "swagger:full": "yarn swagger:bundle && yarn swagger:gen && yarn prettier:fix",
    "test": "set NODE_ENV=test&& jest --detectOpenHandles --silent --verbose",
    "test:watch": "set NODE_ENV=test&& jest --detectOpenHandles --silent --verbose --watch"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.6",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.6",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@neomanis/register-utilities": "^0.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "node": "^16.13.0",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3"
  },
  "keywords": [],
  "author": ""
}
